<%- include ('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/products.css">
</head>

<body>
<%- include ('./includes/navigation.ejs') %>

    <h1 class="products-h1">Available Cart Products</h1>
    <h2 style="text-align: center;"> Grand total: <%=totalPrice %> </h2>
    <ul class="products-list">
        <% if (productsList.length >0) { 
            for (let product of productsList) { %>
                <div class="products-list-item-div">
                <li class="products-list-item" >
                    <h2 class="products-list-item-inside"><%= product.title %></h2>
                    <p class="products-list-item-inside"><img src=<%= product.imageURL %> alt="imageURL"></p>
                    <p class="products-list-item-inside"> <%= product.description %> </p>
                    <h3 class="products-list-item-inside">Price: <%= product.price %></h3>
                    <h3 class="products-list-item-inside">Quantity: <%= product.qty %></h3>
                    <button type="button"><a href='/showProduct/<%=product.id%>'>Get Details</a></button>
                    <form action="/deleteFromCart" method="POST">
                        <input type="hidden" name="productId" value=<%=product.id%>>
                        <button type="submit">Delete From Cart</button>
                    </form>
                </li>
                </div>  
            <% } %>
        <% } else { %>
            <li class="products-list-item"><h3>No Products in Cart</h3></li>
        <% } %>
    </ul>


<%- include ('./includes/end.ejs') %>